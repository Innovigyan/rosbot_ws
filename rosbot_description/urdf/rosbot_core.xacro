<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >


    <!-- BASE_FOOTPRINT -->
    <link name="base_footprint"/>
    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.040" rpy="0 0 0"/>
    </joint>

     <!-- Base Link -->
    <link name="base_link">
        <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://rosbot_description/meshes/base_link.stl"/>
        </geometry>
        <material name="burnt_orange">
            <color rgba="0.9 0.4 0.0 1.0"/>
        </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://rosbot_description/meshes/base_link.stl"/>
            </geometry>
        </collision>
        <inertial>
        <origin xyz="-0.0001 0.012743 0.047204" rpy="0 0 0"/>
        <mass value="1.532453"/>
        <inertia
            ixx="0.009044" ixy="-0.0001165" ixz="-0.0000436358"
            iyy="0.006928" iyz="0.0004711"
            izz="0.0105"/>
        </inertial>
    </link>

    <!-- LEFT WHEEL LINK -->

    <joint name="wheel_left_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_left_link"/>
        <origin xyz="0.088 0.06100 -0.01800" rpy="0 1.5708 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="wheel_left_link">
        <visual>
            <geometry>
                <cylinder radius="0.023" length= "0.0200"/>
            </geometry>
            <material name="metallic_blue">
                <color rgba="0.0 0.3 0.8 1.0"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.023" length= "0.0200"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 1.5708 0"/>
            <mass value="0.03"/>
            <inertia ixx="0.000048" ixy="0.0" ixz="0.0"
                iyy="0.000048" iyz="0.0"
                izz="0.0000079"/>
        </inertial>
    </link>

    <!-- RIGHT WHEEL LINK -->

    <joint name="wheel_right_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_right_link"/>
        <axis xyz="0 0 1"/>
        <origin rpy="0 1.5708 0" xyz="-0.085 0.06100 -0.01750"/>
    </joint>

    <link name="wheel_right_link">
        <visual>
            <geometry>
                <cylinder radius="0.023" length= "0.0200"/>
            </geometry>
            <material name="metallic_blue">
                <color rgba="0.0 0.3 0.8 1.0"/>
            </material>
        </visual>    
        <collision>
            <geometry>
                <cylinder radius="0.023" length= "0.0200"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 1.5708 0"/>
            <mass value="0.03"/>
            <inertia ixx="0.000048" ixy="0.0" ixz="0.0"
                    iyy="0.000048" iyz="0.0"
                    izz="0.0000079"/>
        </inertial>
    </link>

    <!-- CASTER WHEEL LINK -->

    <joint name="caster_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_wheel_link"/>
        <origin rpy="0 0 0" xyz="0 -0.100 -0.023"/>
    </joint>

    <link name="caster_wheel_link">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <sphere radius="0.023"/>
            </geometry>
            <material name="metallic_blue">
                <color rgba="0.0 0.3 0.8 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.023"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.05"/>
            <inertia ixx="0.000016" ixy="0.0" ixz="0.0"
                    iyy="0.000016" iyz="0.0"
                    izz="0.000016"/>
        </inertial>
    </link>

</robot>